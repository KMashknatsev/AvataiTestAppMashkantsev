<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AvataiTestAppMashkantsev.View.DetailsPage">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="12">
                <Label Text="{Binding Item.Title}" FontSize="24" FontAttributes="Bold"/>
                <Label Text="{Binding Item.Description}" FontSize="18"/>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>